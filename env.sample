PORT=3000

# 从小红书开放平台获取
XHS_APP_ID=your_app_id
XHS_APP_SECRET=your_app_secret

# 如果使用 OAuth 或平台提供的 AccessToken，可以填入；否则留空
XHS_ACCESS_TOKEN=

# 上传素材方法名（若文档另有要求请按文档填）
XHS_METHOD_UPLOAD=uploadMaterial

# 打开发布页的 URL Scheme（请按官方文档替换）
# 可用占位符: {url}, {materialId}
XHS_PUBLISH_SCHEME=xhsdiscover://creation?materialUrl={url}

# 未安装时的回落地址
FALLBACK_APPSTORE_URL=https://apps.apple.com/cn/search?term=%E5%B0%8F%E7%BA%A2%E4%B9%A6

